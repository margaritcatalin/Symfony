{% extends 'base.html.twig' %}

{% block body %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header card-header-primary">
            <p class="h3">{{ 'Searching for'|trans }} <b>"{{ q }}"</b> {{ 'you have found'|trans }} <b>{{ results|length }}</b> {{ 'results'|trans}}.</p>
        </div>
    </div>
</div>
{% for result in results %}
    {% set hit = result.result.hit %}
    {% set post = result.transformed %}
    {{ include ('post/raw-post.html.twig', { 'post': post }) }}
    {% endfor %}
<div class="col-md-12">
    {% if results is empty %}
        <p class="h3">{{ 'No results found.'|trans }}</p>
    {% endif %}
</div>
{% endblock %}
